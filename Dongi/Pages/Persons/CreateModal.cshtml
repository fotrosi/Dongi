@page
@using Dongi.Localization
@using Dongi.Pages.Persons
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<DongiResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Person" asp-page="/Persons/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewPerson"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>