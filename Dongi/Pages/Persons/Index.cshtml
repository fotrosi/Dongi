@page
@using Dongi.Localization
@using Dongi.Pages.Persons
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<DongiResource> L
@model IndexModel
@{
}

@section scripts
    {
    <abp-script src="/Pages/Persons/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Persons"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewPersonButton"
                            text="@L["NewPerson"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="PersonsTable"></abp-table>
    </abp-card-body>
</abp-card>