@page
@using Dongi.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DongiResource> L
@using Dongi.Pages.TxManager
@model IndexModel
@{
}

@section scripts
{
    <abp-script src="/Pages/TxManager/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Transactions"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">                
                    <abp-button id="NewTxButton"
                            text="@L["NewTx"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="TxsTable"></abp-table>
    </abp-card-body>
</abp-card>


